{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build and run c++ active file",
            "command": "Start-Process",
            "args": [
                "-FilePath",
                "\"cmd.exe\"",
                "-ArgumentList",
                "/c g++ ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe &${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
